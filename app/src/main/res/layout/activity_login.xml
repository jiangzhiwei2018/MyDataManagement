<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginActivity"
    android:background="@drawable/loginbackground4">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        android:gravity="center">
        <EditText
            android:id="@+id/yonghuming"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="用户名"
            />
        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="密码"
            android:inputType="textPassword"
            android:layout_below="@+id/yonghuming"
            android:layout_marginTop="30dp" />
        <ImageButton
            android:id="@+id/denglu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/imagebutton_selector"
            android:background="@drawable/login"
            android:layout_toRightOf="@+id/password"
            android:layout_alignBottom="@+id/password"/>
        <ImageButton
            android:id="@+id/chongzhi"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/shuaxin"
            android:src="@drawable/imagebutton_selector"
            android:layout_toRightOf="@+id/yonghuming"/>
        <ImageButton
            android:id="@+id/zhuce"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/zhuce"
            android:layout_below="@+id/password"
            android:src="@drawable/imagebutton_selector"
            android:layout_toRightOf="@+id/password"
            android:layout_marginTop="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/password"
            android:layout_below="@+id/zhuce"
            android:text="注       册"
            />
        <CheckBox
            android:id="@+id/remember_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住密码"
            android:layout_below="@+id/password"
            />
    </RelativeLayout>
</LinearLayout>